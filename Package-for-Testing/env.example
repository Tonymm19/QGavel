# Precedentum Environment Configuration
# INSTRUCTIONS: Copy this file to .env and update with your actual values
# cp env.example .env

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/precedentum_db

# Example for default PostgreSQL on Mac:
# DATABASE_URL=postgresql://yourmacusername@localhost:5432/precedentum_db

# Example for default PostgreSQL on Windows:
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/precedentum_db

# CORS Settings (for development)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# API Settings
API_BASE_URL=http://localhost:8000/api/v1

# Optional: Email Configuration (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True

# Optional: AWS S3 (for file storage in production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1



